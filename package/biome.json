{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"dist/**/*",
			"node_modules/**/*",
			"src/tests/**/*"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off"
			},
			"correctness": {
				"useImportExtensions": "error",
				"noUnusedVariables": "error",
				"noUnreachable": "error",
				"noUnusedImports": "error",
				"noUnusedFunctionParameters": "error",
				"noUnusedPrivateClassMembers": "error",
				"noUnusedLabels": "error"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
