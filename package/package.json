  "bugs": {
    "email": "iarla@quartzpay.io"
  },
  "homepage": "https://quartzpay.io",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.4",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@drift-labs/sdk": "^2.103.0-beta.9",
