    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quartz-labs/sdk.git"
  },
  "keywords": [
    "quartz",
    "solana",
    "sdk",
    "crypto",
    "protocol"
  ],
